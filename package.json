  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && tsc -p tsconfig.scripts.json --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "typecheck": "tsc -b && tsc -p tsconfig.scripts.json --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:e2e": "tsx scripts/build-pokemon-data.ts && tsx scripts/validate-pokemon-data.ts && tsx scripts/build-pokemon-models.ts && playwright test",
    "models:build": "tsx scripts/build-pokemon-models.ts",
    "data:build": "tsx scripts/build-pokemon-data.ts && tsx scripts/validate-pokemon-data.ts",
    "data:validate": "tsx scripts/validate-pokemon-data.ts"
  },
  "dependencies": {
